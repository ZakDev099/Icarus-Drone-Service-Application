<UserControl
    x:Class="Icarus_Drone_Service_Application.UserControls.DroneFormControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Icarus_Drone_Service_Application.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="{StaticResource Primary.MainBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
            <RowDefinition />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="New Drone"
            FontWeight="SemiBold" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="20,0,0,0"
            VerticalAlignment="Center"
            Content="Client Name:" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Text="{Binding ClientName}" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Margin="20,0,0,0"
            VerticalAlignment="Center"
            Content="Drone Model:" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Text="{Binding DroneModel}" />

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Margin="20,0,0,0"
            VerticalAlignment="Center"
            Content="Service Problem:" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            AcceptsReturn="True"
            Text="{Binding ServiceProblem}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />

        <Label
            Grid.Row="4"
            Grid.Column="0"
            Margin="20,0,0,0"
            VerticalAlignment="Center"
            Content="Service Cost:" />
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Text="{Binding ServiceCost}" />

        <Label
            Grid.Row="5"
            Grid.Column="0"
            Margin="20,0,0,0"
            VerticalAlignment="Center"
            Content="Service Tag" />
        <!--  "Use a numeric control for the Service Tag"  -->
        <xctk:IntegerUpDown
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Increment="10"
            IsReadOnly="True"
            Maximum="900"
            Minimum="100"
            Value="{Binding ServiceTag, Mode=OneWay}" />

        <Label
            Grid.Row="6"
            Grid.Column="0"
            Margin="20,0,0,0"
            VerticalAlignment="Center"
            Content="Priority:" />
        <RadioButton
            Grid.Row="6"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            GroupName="Priority"
            IsChecked="{Binding PriorityRegular, Mode=TwoWay}">
            Regular
        </RadioButton>
        <RadioButton
            Grid.Row="6"
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            GroupName="Priority"
            IsChecked="{Binding PriorityExpress, Mode=TwoWay}">
            Express
        </RadioButton>


        <Label
            Grid.Row="7"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="{Binding UserFeedback}" />
        <Button
            Grid.Row="7"
            Grid.Column="0"
            Margin="20,10,20,10"
            Command="{Binding DataContext.Cmd_CloseDroneForm, RelativeSource={RelativeSource AncestorType=Window}}">
            Cancel
        </Button>
        <Button
            Grid.Row="7"
            Grid.Column="2"
            Margin="20,10,20,10"
            Command="{Binding DataContext.Cmd_AddNewDrone, RelativeSource={RelativeSource AncestorType=Window}}">
            Add Drone
        </Button>


    </Grid>
</UserControl>
