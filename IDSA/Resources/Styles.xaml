<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  LISTVIEWS  -->
    <!--  Border  -->

    <Style x:Key="ListViews.HeadingBorder" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="{StaticResource Primary.OutlineBrush}" />
        <Setter Property="BorderThickness" Value="0,1,1,0" />
    </Style>

    <Style x:Key="ListViews.ItemBorder" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="{StaticResource Primary.OutlineBrush}" />
        <Setter Property="BorderThickness" Value="0,1,0,0" />
    </Style>

    <!--  Heading TextBlock  -->

    <Style x:Key="ListViews.Heading" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <!--  Items TextBlock  -->

    <Style x:Key="ListViews.Item" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="TextTrimming" Value="WordEllipsis" />
    </Style>

</ResourceDictionary>